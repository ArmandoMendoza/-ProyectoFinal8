
<div class="row">
  <div class="col-sm-4">
    <% if current_user.profile.photo_url %>
    <p><%= image_tag current_user.profile.photo_url, class: "avatar", size: "185x185" %></p>
    <% end %>
    <h4><%= @user.name %> <%= @user.lastname %></h4>
    <p><i><%= @user.email %></i></p>

    <%= link_to "Ver Perfil", users_profile_path, class: "btn btn-dark mt-1 btn-sm" %>
    <%= link_to "Editar Perfil" , edit_users_profile_path, class: "btn btn-secondary mt-1 btn-sm"  %>

  </div>

  <div class="col-sm-8">
      <h3>Pautas para aplicar</h3>
      <%=  %>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Time</th>
        <th>Address</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @press_conferences.each do |press_conference| %>
        <tr>
          <td><%= press_conference.title %></td>
          <td><%= press_conference.description %></td>
          <td><%= press_conference.date %></td>
          <td><%= press_conference.time %></td>
          <td><%= press_conference.address %></td>
          <td><%= press_conference.status %></td>
          <td>
            <%= link_to "show", users_press_conference_path(press_conference)%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

</div>
